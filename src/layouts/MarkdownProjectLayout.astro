---
import "../styles/project.css";
import BaseLayout from "./BaseLayout.astro";
import ImageCarousel from "../components/ImageCarousel.astro";

const { frontmatter } = Astro.props;

// Transform frontmatter images to use dynamic imports
const transformedImages = await Promise.all(
  (frontmatter.images || []).map(async (image: any) => {
    try {
      // Extract filename from URL and construct asset path
      const filename = image.url.split("/").pop();
      const assetPath = `../assets/project-images/${filename}`;

      // Dynamically import the image
      const importedImage = await import(assetPath);

      return {
        src: importedImage.default,
        alt: image.alt,
        source: image.source,
      };
    } catch (error) {
      console.warn(`Could not import image: ${image.url}`, error);
      return null;
    }
  }),
);

// Filter out any failed imports
const validImages = transformedImages.filter(Boolean);
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="project-header">
    <h1>{frontmatter.title}</h1>
    <p class="project-date">
      Published on: {frontmatter.startDate.toString().slice(0, 10)}
    </p>
    {
      frontmatter.client && (
        <p class="project-client">Client: {frontmatter.client}</p>
      )
    }
  </div>
  {
    validImages && validImages.length > 0 && (
      <ImageCarousel images={validImages} />
    )
  }
  <div class="project-content">
    <slot />
  </div>
</BaseLayout>
